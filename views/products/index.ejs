<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1><%= title %></h1>
    <a href="/admin/products/add" class="btn btn-primary">Thêm mới Sản phẩm</a>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Nhà cung cấp</th>
            <th style="width: 150px;">Hành động</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(product => { %>
            <tr>
                <td><%= product.name %></td>
                <td><%= product.price.toLocaleString('vi-VN') %> VNĐ</td>
                <td><%= product.quantity %></td>
                <td><%= product.supplier.name %></td>
                <td>
                    <a href="/admin/products/edit/<%= product._id %>" class="btn btn-warning btn-sm">Sửa</a>
                    <form action="/admin/products/delete/<%= product._id %>" method="POST" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa?');">
                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<%- include('../partials/footer') %>
